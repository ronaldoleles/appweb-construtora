<div class="card">
  <div class="card-body">
    <form action="/admin/diarias/lancar" method="POST">
      <h4 class="text-center">{{obras.nomeObra}}</h4>

      <small></small>
      <div class="table-responsive">
        <table class="table table-striped table-hover">

          <thead class="bg-dark text-light">
            <tr>
              <th scope="col">Funcionário</th>
              <th scope="col">Segunda</th>
              <th scope="col">Terça</th>
              <th scope="col">Quarta</th>
              <th scope="col">Quinta</th>
              <th scope="col">Sexta</th>
              <th scope="col">Sábado</th>
              <th scope="col">Domingo</th>
              <th scope="col">Total</th>
            </tr>
          </thead>
          <tbody>
            {{#each escalacoes}}
            <tr>
              <th scope="row">{{categoria.nome}}: <small><br>{{categoria.funcao}} R$ {{categoria.salario}}</small></th>

              <input type="hidden" value="{{categoria.nome}}" name="nome">
              <input type="hidden" value="{{_id}}" name="idEscalacao">
              <input type="hidden" value="{{categoria._id}}" name="idCategoria">

              <td>
                <div class="form-check">
                  <label for="{{_id}}">Manhã</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="1" {{checkSegundaM}}>
                </div>

                <div class="form-check">
                  <label for="{{_id}}">Tarde</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="2" {{checkSegundaT}}>
                </div>
              </td>
              <td>
                <div class="form-check">
                  <label for="{{_id}}">Manhã</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="3" {{checkTercaM}}>

                </div>
                <div class="form-check">
                  <label for="{{_id}}">Tarde</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="4" {{checkTercaT}}>

                </div>
              </td>


              <td>
                <div class="form-check">
                  <label for="{{_id}}">Manhã</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="5" {{checkQuartaM}}>

                </div>
                <div class="form-check">
                  <label for="{{_id}}">Tarde</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="6" {{checkQuartaT}}>

                </div>
              </td>
              <td>
                <div class="form-check">
                  <label for="{{_id}}">Manhã</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="7" {{checkQuintaM}}>

                </div>
                <div class="form-check">
                  <label for="{{_id}}">Tarde</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="8" {{checkQuintaT}}>

                </div>
              </td>
              <td>
                <div class="form-check">
                  <label for="{{_id}}">Manhã</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="9" {{checkSextaM}}>

                </div>
                <div class="form-check">
                  <label for="{{_id}}">Tarde</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="10" {{checkSextaT}}>

                </div>
              </td>
              <td>
                <div class="form-check">
                  <label for="{{_id}}">Manhã</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="11" {{checkSabadoM}}>

                </div>
                <div class="form-check">
                  <label for="{{_id}}">Tarde</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="12" {{checkSabadoT}}>

                </div>
              </td>
              <td>
                <div class="form-check">
                  <label for="{{_id}}">Manhã</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="13" {{checkDomingoM}}>

                </div>
                <div class="form-check">
                  <label for="{{_id}}">Tarde</label>
                  <input type="checkbox" name="diarias" id="{{_id}}" class="form-check-input" value="14" {{checkDomingoT}}>

                </div>
              </td>


              <td>
                <input type="hidden" for="{{_id}}" value=";" name="diarias">
                <input type="hidden" value="{{categoria.salario}}" name="salario">
                R${{total}}
              </td>
              {{else}}
              {{/each}}
          </tbody>
          <tfoot>
            <tr>
              <th scope="row">Total Geral</th>
              <td>
                {{#each semanas}}
                R$ {{total}}
                {{else}}
                {{/each}}

              </td>
            </tr>
          </tfoot>
        </table>

      </div>
      <button type="submit" class="btn btn-success">Lançar diarias</button>
      <a href=""><button class="btn btn-danger">Limpar Diarias</button></a>
    </form>
  </div>
</div>