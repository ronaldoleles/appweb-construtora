{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h2>Lista de Obras:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Obra</button></a>
{{#each obras}}
<div class="card mt-4">
  <div class="card-body">
    <h4>{{nomeObra}}</h4>
    <small>Proprietario: {{nomeProprietario}} </small>

    <br>
    <small>Telefone: {{telefoneProprietario}}</small>
    <br>
    <small>Data de início: {{data}}</small>
    <br><br>
    <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar</button> </a>
    <a href="/admin/postagens/escalar/{{_id}}"><button class="btn btn-success">Escalar Funcionários</button> </a>
    <br> <br>
  </div>
</div>
{{else}}
{{/each}}