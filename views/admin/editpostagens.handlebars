{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Editar Obra: </h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/postagens/edit" method="POST">
      <input type="hidden" name="id" value="{{obra._id}}">
      <label for="nomeObra">Nome da Obra: </label>
      <input type="text" id="nomeObra" name="nomeObra" class="form-control" value="{{obra.nomeObra}}">
      <label for="nomeProprietario">Nome do Proprietário: </label>
      <input type="text" id="nomeProprietario" name="nomeProprietario" class="form-control" value="{{obra.nomeProprietario}}">
      <label for="telefoneProprietario">Telefone: </label>
      <input type="number" id="telefoneProprietario" name="telefoneProprietario" class="form-control" value="{{obra.telefoneProprietario}}">

      <button type="submit" class="btn btn-success mt-4">Salvar Edição</button>
    </form>
  </div>
</div>